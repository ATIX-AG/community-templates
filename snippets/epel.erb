<%#
kind: snippet
name: epel
%>

<%
  epel_url = 'http://dl.fedoraproject.org/pub/epel/$major/$arch/$direpel-release-$os.noarch.rpm'

  case @host.operatingsystem.major
  when '4'
  epel_url.gsub!('$os','4-10')
  epel_url.gsub!('$dir','')
  when '5'
  epel_url.gsub!('$os','5-4')
  epel_url.gsub!('$dir','')
  when '6'
  epel_url.gsub!('$os','6-8')
  epel_url.gsub!('$dir','')
  when '7'
  epel_url.gsub!('$os','7-5')
  epel_url.gsub!('$dir','e/')
  else
  ''
  end
-%>
su -c 'rpm -Uvh <%= @host.os.medium_uri(@host, epel_url) %>'
